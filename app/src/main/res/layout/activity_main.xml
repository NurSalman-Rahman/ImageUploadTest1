<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/sal"
        android:layout_width="331dp"
        android:layout_height="356dp"

        android:src="@drawable/img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </ImageView>

    <ImageView
        android:id="@+id/Ic1"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/icon1"
        android:backgroundTint="@color/teal_200"

        app:layout_constraintBottom_toBottomOf="@id/sal"
        app:layout_constraintRight_toRightOf="@id/sal"></ImageView>

    <Button
        android:id="@+id/B1"
        android:background="@color/black"
        android:textColor="@color/teal_700"
        android:text="Upload"

         app:layout_constraintTop_toBottomOf="@id/sal"
        app:layout_constraintLeft_toLeftOf="@id/sal"
        app:layout_constraintRight_toRightOf="@id/sal"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>